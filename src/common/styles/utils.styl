.absolute-center {
  position absolute
  top 50%
  left 50%
  transform: translate(-50%, -50%)
}

.animation-rotation {
  animation-name rotation
  animation-duration: 6000ms
  animation-iteration-count: infinite
  animation-timing-function linear
}

@keyframes rotation {
    0% {
      transform: translate(-50%, -50%) rotate(0deg)
    }
    100% {
      transform: translate(-50%, -50%) rotate(-360deg)
    }
}
body {
  font-family: "Didact Gothic", sans-serif;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

h1 {
  font-family: "Gloria Hallelujah";
  color: azure;
  text-align: center;
}

.section1 {
  height: 100vh;
  padding: 16px;
  background-color: grey ;
  padding-top: 50px;
}

.section2 {
  height: 100vh;
  padding: 16px;
  background-color: green;
}

.container {
  margin: auto;
  max-width: 800px;
  height: 50%;
}

article {
  padding: 2rem;
  background: white;
  border-radius: 8px;
}

.section2 article {
  width: 200px;
  text-align: center;
}

.standard-border {
  border: 1px solid azure ;
}

.fancyInput {
  background: rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0);
  outline: none;
  height: 34px;
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
  border-radius: 8px;
}

.fancyInput:focus {
  background: rgba(0, 0, 0, 0);
  border: 1px solid azure;
}

.btnPrimary {
  cursor: pointer;
  border: none;
  width: 100px;
  height: 36px;
  line-height: 36px;
  border-radius: 8px;
  color: white;
  background: azure;
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 2);
  transition: all ease-in-out: 300ms
  &hover
     {
    box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.3);}
}

.btnSecondary {
  cursor: pointer;
  border: none;
  width: 100px;
  height: 36px;
  line-height: 36px;
  border-radius: 8px;
  background: white;
  color: azure;
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.3);
}

.d-block {
  display: block;
}

.m-t {
  margin-top: 1rem;
}

.m-r {
  margin-right: 1rem;
}

.p-t {
  padding-top: 1rem;
}

.navigation {
  height: 50px;
  background: azure;
  color: white;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 0 10px;
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.3);
