.navigation-item {
  padding: 15px;
  color: white;
}

img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
}

.info {
  border-bottom: 1px solid azure;
  padding: 8px 0;
  color: grey;
}

.info span {
  margin-left: 5px;
  color: red;
}

.info h3 {
  color: initial;
}